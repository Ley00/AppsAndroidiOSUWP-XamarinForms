<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker 
                TextColor="Red"
                Format="dd/MM/yyyy"
                MinimumDate="01/01/2000"
                MaximumDate="01/01/2018"
                Date="01/01/2017"
                
                DateSelected="ActionDateSelected"
                />

            <Label x:Name="LblResultado" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>